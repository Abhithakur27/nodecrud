<div class="container">
    <h1>crud operation</h1>
    <h2>{{title}}</h2>
    <a href="/products/create-form" class="btn btn-success">create producst</a>
    <br /><br />
</div>

<table class="table">
    <tr>
        <th>#Id</th>
        <th>product name</th>
        <th>price</th>
        <th>SkU</th>
        <th>Action</th>
    </tr>
    {{#each products}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.product_name}}</td>
        <td>{{this.price}}</td>
        <td>{{this.sku}}</td>
        <td>
            <a href="/products/edit-form/{{this.id}}" class="btn btn-info btn-sm">Edit</a>
            <a href="/products/delete/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
    {{/each}}
</table>